#!/bin/sh

# Increment, decrement, or mute the volume using Pipewire and send a notification

case $1 in
	up)
		# Set the volume on (if it was muted)
		pactl set-sink-mute @DEFAULT_SINK@ 0
		pactl set-sink-volume @DEFAULT_SINK@ +5%
		;;
	down)
		wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
		pactl set-sink-volume @DEFAULT_SINK@ -5%
		;;
	mute)
		pactl set-sink-mute @DEFAULT_SINK@ toggle
		;;
esac

VOLUME=$(pactl list sinks | awk '/Volume:/{print $5}' | head -n 1 | awk -F'%' '{print $1}')
MUTED=$(pactl list sinks | awk '/Mute:/{mute=$2} END{print mute}')


send_notification() {
	if [ "$MUTED" = "yes" ]; then ICON="mute"; elif [ "$VOLUME" -lt 33 ]; then ICON="low"; elif [ "$VOLUME" -lt 66 ]; then ICON="medium"; else ICON="high"; fi
	if [ "$MUTED" = "yes" ]; then TEXT="Currently muted"; else TEXT="Currently at ${VOLUME}%"; fi

	dunstify -a "Volume" -r 9993 -h int:value:"$VOLUME" -i "volume-$ICON" "Volume" "$TEXT" -t 2000
}

case $1 in
	mute)
		case "$(pactl set-sink-mute @DEFAULT_SINK@)" in
			*MUTED* ) send_notification mute;;
			*       ) send_notification;;
		esac;;
	*)
		send_notification;;
esac
